<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="?attr/selectableItemBackground">

    <TextView
        android:id="@+id/sumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif"
        android:textSize="12sp"
        android:textStyle="italic"
        tools:text="Kompas.com" />

    <android.widget.Space
        android:layout_width="match_parent"
        android:layout_height="4dp" />

    <TextView
        android:id="@+id/judul"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-condensed"
        android:textSize="18sp"
        android:textStyle="bold"
        tools:text="Tim Ridwan Mukti Laporkan Kampanye Hitam ke Dewan Pers" />

    <android.widget.Space
        android:layout_width="match_parent"
        android:layout_height="8dp" />

    <TextView
        android:id="@+id/excerpt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-light"
        android:textSize="14sp"
        tools:text="JAKARTA - Tim Media Center Pasangan Calon Gubernur dan Wakil Gubernur Bengkulu, Ridwan Mukti dan Rohidin Mersyah, melaporkan praktik kampanye hitam (black campaign) dalam sepekan terakhir oleh dua media mingguan di Bengkulu." />

</LinearLayout>